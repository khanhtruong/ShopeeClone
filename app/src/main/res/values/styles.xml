<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    TextView session-->
    <!--    Toolbar-->
    <style name="Widget.ShopeeClone.TextView.Toolbar.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>


    <!--    Header-->
    <style name="Widget.ShopeeClone.TextView.Header3" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Header3.White" parent="Widget.ShopeeClone.TextView.Header3">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Header3.Black" parent="Widget.ShopeeClone.TextView.Header3">
        <item name="android:textColor">@color/onSecondary</item>
    </style>


    <!--    Content-->
    <style name="Widget.ShopeeClone.TextView.Content" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Content.Black" parent="Widget.ShopeeClone.TextView.Content">
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Content.Black.TwoLines" parent="Widget.ShopeeClone.TextView.Content.Black">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Content.Primary" parent="Widget.ShopeeClone.TextView.Content">
        <item name="android:textColor">@color/primary</item>
    </style>


    <!--    Big content-->
    <style name="Widget.ShopeeClone.TextView.BigContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.BigContent.Primary" parent="Widget.ShopeeClone.TextView.BigContent">
        <item name="android:textColor">@color/primary</item>
    </style>


    <!--    Hyper link-->
    <style name="Widget.ShopeeClone.TextView.HyperLink" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/hyper_link</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.HyperLink.SingleLine" parent="Widget.ShopeeClone.TextView.HyperLink">
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <!--    Title-->
    <style name="Widget.ShopeeClone.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Title.Black" parent="Widget.ShopeeClone.TextView.Title">
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Title.Black.SingleLine" parent="Widget.ShopeeClone.TextView.Title.Black">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Title.White" parent="Widget.ShopeeClone.TextView.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Title.Primary" parent="Widget.ShopeeClone.TextView.Title">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.Title.CancelColor" parent="Widget.ShopeeClone.TextView.Title">
        <item name="android:textColor">@color/cancel</item>
    </style>


    <!--    Big title-->
    <style name="Widget.ShopeeClone.TextView.BigTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.BigTitle.White" parent="Widget.ShopeeClone.TextView.BigTitle">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--    Small title-->
    <style name="Widget.ShopeeClone.TextView.SmallTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.SmallTitle.Black" parent="Widget.ShopeeClone.TextView.SmallTitle">
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.SmallTitle.Primary" parent="Widget.ShopeeClone.TextView.SmallTitle">
        <item name="android:textColor">@color/primary</item>
    </style>


    <!--Small content-->
    <style name="Widget.ShopeeClone.TextView.SmallContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:gravity">center</item>
        <item name="fontStyle">normal</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.SmallContent.Black" parent="Widget.ShopeeClone.TextView.SmallContent">
        <item name="android:textColor">@color/onSecondary</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.SmallContent.SubColor" parent="Widget.ShopeeClone.TextView.SmallContent">
        <item name="android:textColor">@color/sub_text_content</item>
    </style>

    <style name="Widget.ShopeeClone.TextView.SmallContent.Primary" parent="Widget.ShopeeClone.TextView.SmallContent">
        <item name="android:textColor">@color/primary</item>
    </style>


    <!--    Tab text appearance-->
    <style name="Widget.ShopeeClone.TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <!--    End session-->

</resources>