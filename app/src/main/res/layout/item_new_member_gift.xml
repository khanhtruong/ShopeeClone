<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_gift_title"
        style="@style/Widget.ShopeeClone.TextView.BigTitle.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_dark_blue_4"
        android:paddingHorizontal="@dimen/medium_margin_horizontal"
        android:paddingVertical="@dimen/small_margin_vertical"
        android:text="Tặng khách hàng mới"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_gift_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/background_primary_50"
        android:elevation="-1dp"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView_gift_title" />

    <TextView
        android:id="@+id/textView_gift_voucher"
        style="@style/Widget.ShopeeClone.TextView.BigContent.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin_horizontal"
        android:layout_marginTop="16dp"
        android:text="Voucher tặng bạn mới"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_gift_title" />

    <ImageView
        android:id="@+id/imageView_voucher"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="@dimen/small_margin_horizontal"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:padding="8dp"
        android:src="@android:color/holo_red_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_gift_voucher" />

    <TextView
        android:id="@+id/textView_first_buy"
        style="@style/Widget.ShopeeClone.TextView.BigContent.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin_horizontal"
        android:layout_marginTop="16dp"
        android:text="Đơn đầu tiên 0Đ"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_voucher" />

    <TextView
        android:id="@+id/textView_more_button"
        style="@style/Widget.ShopeeClone.TextView.SmallTitle.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin_horizontal"
        android:text="Xem thêm >"
        app:layout_constraintBottom_toBottomOf="@+id/textView_first_buy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView_first_buy" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_first_deal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/small_margin_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_first_buy" />

</androidx.constraintlayout.widget.ConstraintLayout>